{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2021",
    "lib": ["ESNext"],
    "types": ["node"],
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true
  },
  "include": ["./scripts"],
  "exclude": ["node_modules"]
}
