{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./site/**/*.ts", "./scripts/**/*.ts", "./scripts/**/*.svelte", "*.config.ts"]
}
